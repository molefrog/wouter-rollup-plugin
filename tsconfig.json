{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "declaration": false,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "wouter:routes": ["./src/wouter-routes.d.ts"]
    }
  },
  "include": [
    "src/wouter-routes.d.ts",
    "src/**/*",
    "routes/**/*",
    "plugin/**/*",
    "rollup.config.ts"
  ]
}
